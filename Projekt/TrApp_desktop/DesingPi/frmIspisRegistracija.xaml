<Window x:Class="DesingPi.frmIspisRegistracija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ispis dnevnih registracija" Height="314" Width="743" Loaded="Window_Loaded">
    <Grid>
        <DataGrid Name="registracijadatagrid2" ItemsSource="{Binding}" IsReadOnly="True" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Height="116" Width="674" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id_tehnickog_pregleda5" Binding="{Binding id_tehnickog_pregleda}" Header="#"/>
                <DataGridTextColumn x:Name="sljedeca_registracija5" Binding="{Binding sljedeca_registracija}" Header="Vrijedi do" SortDirection="Descending"/>
                <DataGridTextColumn x:Name="id_vozilo5" Binding="{Binding id_vozilo}" Header="Id vozila"/>
                <DataGridTextColumn x:Name="vrsta_vozila_id5" Binding="{Binding vrsta_vozila_id}" Header="Vrsta vozila"/>
                <DataGridTextColumn x:Name="registracija5" Binding="{Binding registracija}" Header="Registracija"/>
                <DataGridTextColumn x:Name="datum_registracije5" Binding="{Binding sljedeca_registracija}" Header="Datum prve registracija" />
                <DataGridTextColumn x:Name="naziv5" Binding="{Binding naziv}" Header="Naziv"/>
                <DataGridTextColumn x:Name="napomena" Binding="{Binding napomena}" Header="Napomena"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="ID:" Grid.Column="0" HorizontalAlignment="Right" Margin="0,10,693,238" Grid.Row="0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Height="35">
        </Label>
        <TextBox x:Name="id_tehnickog_pregleda" HorizontalAlignment="Left" Height="30" Margin="42,10,0,243" Grid.Row="0" Text="{Binding ElementName=registracijadatagrid2, Path=SelectedItem.id_tehnickog_pregleda}" VerticalAlignment="Center" Width="68" IsEnabled="False" FontSize="24" FontWeight="Bold" BorderThickness="0,0,0,2"/>
        <Button Content="Odaberi" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Width="75" Click="btnOdaberi_Click"/>
        <TextBox x:Name="id_voziloTextBox3" HorizontalAlignment="Left" Height="23" Margin="541,21,0,0"  Text="{Binding ElementName=registracijadatagrid2, Path=SelectedItem.id_vozilo}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
    </Grid>
</Window>
